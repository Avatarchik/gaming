<config>

    <affiliate name="Amaya">

        <!-- Support Email Address - subject substitutes {gameName} for the currently selected game -->
        <supportEmail address="support@amaya.com" subject="Amaya Casino Support - {gameName}" errorSubject="Casino Error" />

        <!-- Menu Config -->
        <menu>
            <mainMenu apply="default" enabled="1">
				<lobby>0</lobby>
                <gameMenu>0</gameMenu>
                <cashier>1</cashier>
                <options>1</options>
                <gamingGuide>1</gamingGuide>
                <support>1</support>
                <myAccountDashboard>1</myAccountDashboard>
                <myAccount>1</myAccount>
                <realityCheck>0</realityCheck>
                <responsibleGaming>0</responsibleGaming>
                <logout>0</logout>
                <about>1</about>
                <paytable>1</paytable>
            </mainMenu>

            <mainMenu apply="gameName:EGIGame,EGIBally">
                <gamingGuide>0</gamingGuide>
                <paytable>0</paytable>
            </mainMenu>
        </menu>

        <!-- Default Options -->
        <options>
            <options deviceType="web">
                <soundEffects force="0">1</soundEffects>
                <fitToWindow force="0">0</fitToWindow>
            </options>
        </options>

        <gameSettings>
            <disabledGames>
                <game>EGIGame</game>
            </disabledGames>
        </gameSettings>

        <autoPlay enabled="1"/>

        <responsibleGaming url="" />

        <realityCheck redirect="true" url="http://{server}/userinfo/servlet/TaskServlet?taskId=5062&amp;seq=1&amp;formatType=gmhtml&amp;playerHandle={playerHandle}&amp;lang={lang}" redirectUrl="" />

        <cashier url="http://{server}/cyberbanx/bankentry.jsp?playerHandle={playerHandle}&amp;account={account}&amp;devicetype={deviceType}&amp;lang={lang}" />

        <gamingGuide url="http://{server}/casino/client/help/guideredirect.jsp?gameName={gameName}&amp;gameType={gameType}&amp;realityCheckEnabled={realityCheckEnabled}&amp;lang={lang}&amp;mode=casino4&amp;displayName={displayName}" />

        <myAccount url="http://{server}/userinfo/servlet/TaskServlet?taskId=5001&amp;jTransform=true&amp;seq=1&amp;formatType=cmahtml&amp;playerHandle={playerHandle}&amp;devicetype={deviceType}&amp;lang={lang}" />

        <lobby url=""/>

        <about>
            <version enabled="1"/>
            <terms enabled="1"/>
            <rtp enabled="1"/>
        </about>

        <display>
            <resize enabled="1"/>
            <quality>
                <high enabled="0"/>
            </quality>
        </display>

        <clock enabled="0"/>

        <homeScreenAlert enabled="1"/>

        <accountSelect enabled="0"/>

    </affiliate>

    <system>
        <!-- Disconnect and Inactivity Timeouts (milliseconds) -->
        <timeouts>
            <inactivity>240000</inactivity>
            <retry>60000</retry>
        </timeouts>

        <ping>5000</ping>
    </system>



</config>