<assembly>
    <id>@game.name@</id>
    <formats>
        <format>war</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <includes>
                <include>chartwell.games.@game.name@:server</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <includes>
                <include>chartwell.games.@game.name@.client:casino4:zip:*</include>
                <include>chartwell.games.@game.name@.client:casino5:zip:*</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
